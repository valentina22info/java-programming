import java.io.*;
import java.util.*;
import java.text.*;
import java.math.*;
import java.util.regex.*;

public class Solution {

    public static void main(String[] args) {
         Scanner ph = new Scanner(System.in);
        int m = ph.nextInt();
        int n = ph.nextInt();
        int[][] a = new int[m][n];
        for (int i = 0; i < m; i++) {
            for (int j = 0; j < n; j++) {
                a[i][j] = ph.nextInt();
            }
        }
        int maxWealth = 0;
        for (int i = 0; i < m; i++) {
            int wealth = 0;
            for (int j = 0; j < n; j++) {
                wealth += a[i][j];
            }
            if (wealth > maxWealth) {
                maxWealth = wealth;
            }
        }
        System.out.println("Richest Customer Wealth is " + maxWealth);
    }
}
